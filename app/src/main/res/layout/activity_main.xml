<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_top_conners"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descrip"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Quality"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionn"
            android:layout_marginTop="150dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="kdhahds sdhgvasjdas sadhaisdghas bduiiasf dfkadsb sdfjkbsdfk sdfkjbsdfkj dfkjbsdfk ds dskjbskd fksdfjsdf sdfbsdlf sdfjbsds dfjbsdf sfjsbd sfskdfksdf "/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:tabIndicatorColor="#000000"
            app:tabIndicatorHeight="3dp"
            app:tabGravity="center"
            android:layout_marginTop="210dp"
            android:paddingBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_marginTop="300dp">

            <Button
                android:id="@+id/swipeButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Join the movement!"
                android:textColor="#FFFFFF" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        />

</FrameLayout>
